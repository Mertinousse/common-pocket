#transactions
  - @transactions.this_month.ordered.to_a.group_by_day(&:created_at).reverse_each do |day, transactions|
    %h4= day
    - transactions.each do |transaction|
      .transaction
        .transaction-category= transaction.category.name
        .transaction-amount= transaction.amount
        .transaction-creator= transaction.user.name

#actions
  %button{ data: { reflex: 'click->Example#new' } }
    +

- if session[:step].present?
  = render 'form'
